{
  "name": "@maiertech/prettier-config",
  "version": "0.3.0",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable config for Prettier.",
  "repository": "github:maiertech/prettier-config",
  "license": "MIT",
  "source": "./src/index.js",
  "main": "./dist/index.js",
  "module": "./dist/index.modern.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.modern.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "prettier"
  ],
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "microbundle --format cjs,modern",
    "watch": "microbundle watch --format cjs,modern --compress false",
    "version": "changeset version && npm run format",
    "release": "changeset publish",
    "prettier": "prettier . --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "npm run prettier -- --check",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run prettier -- --write",
    "test": "npx package-check",
    "purge": "rm -rf ./node_modules",
    "upgrade-interactive": "npx npm-check -u"
  },
  "peerDependencies": {
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.13.0",
    "@maiertech/eslint-config": "^0.17.1",
    "@skypack/package-check": "^0.2.2",
    "eslint": "^7.17.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "micromatch": "^4.0.2",
    "npm-check": "^5.9.2",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1"
  }
}
