{
  "name": "@maiertech/prettier-config",
  "version": "1.0.1",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable config for Prettier.",
  "repository": "github:maiertech/prettier-config",
  "license": "MIT",
  "exports": "./index.js",
  "files": [
    "index.js"
  ],
  "keywords": [
    "prettier"
  ],
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "version": "changeset version",
    "release": "changeset publish",
    "test": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint . --ignore-path .gitignore",
    "test:prettier": "prettier . --ignore-path .gitignore --check",
    "purge": "rm -rf ./node_modules"
  },
  "peerDependencies": {
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@maiertech/eslint-config": "^2.0.0",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": "@maiertech"
  },
  "lint-staged": {
    "**/*.{js,json,md,yml}": "prettier --write"
  }
}
