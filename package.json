{
  "name": "@maiertech/prettier-config",
  "version": "0.1.1",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable config for Prettier.",
  "repository": "github:maiertech/prettier-config",
  "license": "MIT",
  "keywords": [
    "prettier"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=10.20.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "microbundle --format modern,cjs",
    "watch": "microbundle watch --format modern,cjs --compress false",
    "version": "changeset version && npm run format",
    "release": "changeset publish",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "npm run prettier -- --check",
    "prettier": "prettier . --ignore-path .gitignore",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run prettier -- --write",
    "purge": "rm -rf ./node_modules",
    "upgrade-interactive": "npx npm-check -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "peerDependencies": {
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "2.7.2",
    "@maiertech/eslint-config": "0.11.0",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.9",
    "microbundle": "0.12.0",
    "npm-check": "5.9.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5"
  }
}
